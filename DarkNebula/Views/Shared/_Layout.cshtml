<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge, chrome=1" />
    <meta name="description" content="JavaScript desktop environment built with jQuery." />
    <title>@ViewBag.Title jQuery Desktop</title>
